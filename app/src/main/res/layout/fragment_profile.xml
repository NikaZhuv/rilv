<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C0E28"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Верхня частина → Аватар + кнопки -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/avatar_banner">

                <!-- Аватар -->
                <ImageView
                    android:id="@+id/profile_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/circle"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pngegg" />

                <!-- Кнопка редагування -->
                <ImageView
                    android:id="@+id/profile_edit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/edit_ico"
                    app:tint="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Settings"
                    />

                <!-- Кнопка меню/налаштувань -->
                <ImageView
                    android:id="@+id/profile_menu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/menu_ico"
                    app:tint="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Edit Profile"
                    />

            </RelativeLayout>

            <!-- Ім'я -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Watchlists section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Watchlists"
                android:textColor="#A3BCF9"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:id="@+id/profile_watchlists_block"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:background="#1C2541"
                android:padding="12dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(placeholder)"
                    android:textColor="#778DA9"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Highest Rated Movies -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest Rated"
                android:textColor="#A3BCF9"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:id="@+id/profile_rated_block"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:background="#1C2541"
                android:padding="12dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(placeholder)"
                    android:textColor="#778DA9"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Tags / Stats -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textColor="#A3BCF9"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:id="@+id/profile_tags_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#1C2541"
                android:padding="12dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(placeholder)"
                    android:textColor="#778DA9"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>